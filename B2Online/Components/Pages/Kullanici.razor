@page "/panel/kullanici"
@layout Components.Layout.MainLayout
<PageTitle>OMNIA</PageTitle>

<h3 class="text-xl lg:text-4xl text-blue-950 font-bold text-center p-4">
    Kullanıcı İşlemleri
</h3>

<div class="lg:w-1/2 mx-auto px-4 mb-4">
    <div class="bg-gradient-to-b from-blue-950 via-violet-950 to-purple-950">
        <h1 class="text-lg text-white text-center py-4 px-2 font-bold">
            Kullanıcı Bilgileri
        </h1>
    </div>
    <div class="bg-white shadow-md">
        <div>
            <div class="p-4 flex flex-col lg:flex-row">
                <label for="name-surname" class="block text-blue-950 text-md w-1/4 lg:mt-2">Adı Soyadı</label>
                <input type="text" id="name-surname" class="text-md p-2 block w-full rounded-md border border-slate-200 focus:outline-orange-500">
            </div>
            <div class="p-4 flex flex-col lg:flex-row">
                <label for="company-title" class="block text-blue-950 text-md w-1/4 lg:mt-2">Şirket Ünvanı</label>
                <input type="text" id="company-title" class="text-md p-2 block w-full rounded-md border border-slate-200 focus:outline-orange-500">
            </div>
            <div class="p-4 flex flex-col lg:flex-row">
                <label for="email" class="block text-blue-950 text-md w-1/4 lg:mt-2">E-Posta Adresi</label>
                <input type="text" id="email" class="text-md p-2 block w-full rounded-md border border-slate-200 focus:outline-orange-500">
            </div>
            <div class="p-4 flex flex-col lg:flex-row">
                <label for="phone" class="block text-blue-950 text-md w-1/4 lg:mt-2">Telefon Numarası</label>
                <input type="text" id="phone" class="text-md p-2 block w-full rounded-md border border-slate-200 focus:outline-orange-500">
            </div>
        </div>

        <div class="flex flex-col lg:flex-row p-4">
            <div class="flex-1 lg:p-2">
                <button class="w-full shadow-md rounded-md bg-gradient-to-b from-blue-950 via-violet-950 to-purple-950 text-white font-bold text-sm lg:text-md px-4 py-2 mb-2 hover:text-blue-950 hover:from-white hover:shadow-sm">Kullanıcı Bilgilerini Düzenle</button>
                <button class="w-full shadow-md rounded-md bg-gradient-to-b from-blue-950 via-violet-950 to-purple-950 text-white font-bold text-sm lg:text-md px-4 py-2 mb-2 hover:text-blue-950 hover:from-white hover:shadow-sm">Şifre Değişikliği</button>
            </div>

            <div class="flex-1 lg:p-2">
                <button class="w-full shadow-md rounded-md bg-gradient-to-b from-blue-950 via-violet-950 to-purple-950 text-white font-bold text-sm lg:text-md px-4 py-2 mb-2 hover:text-blue-950 hover:from-white hover:shadow-sm">Rapor Tasarım</button>
                <button class="w-full shadow-md rounded-md bg-gradient-to-b from-blue-950 via-violet-950 to-purple-950 text-white font-bold text-sm lg:text-md px-4 py-2 mb-2 hover:text-blue-950 hover:from-white hover:shadow-sm">Düzenli Rapor Ayarları</button>
            </div>

            <div class="flex-1 lg:p-2">
                <button class="w-full shadow-md rounded-md bg-gradient-to-b from-blue-950 via-violet-950 to-purple-950 text-white font-bold text-sm lg:text-md px-4 py-2 mb-2 hover:text-blue-950 hover:from-white hover:shadow-sm">Kullanıcıya Göre Rapor Atama</button>
                <button class="w-full shadow-md rounded-md bg-gradient-to-b from-blue-950 via-violet-950 to-purple-950 text-white font-bold text-sm lg:text-md px-4 py-2 mb-2 hover:text-blue-950 hover:from-white hover:shadow-sm">Bildirim Ayarları</button>
            </div>
        </div>
    </div>
</div>