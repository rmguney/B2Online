@page "/panel/home"
@layout Components.Layout.MainLayout
@rendermode InteractiveServer
<PageTitle>OMNIA</PageTitle>

<div class="flex flex-col text-center p-8">
    <div class="flex flex-row justify-center">
        <h3 class="text-4xl text-blue-950">
            Hoşgeldiniz
        </h3>
        <h3 class="text-4xl text-white">
             -
        </h3>
        <h3 class="text-4xl text-orange-500">
            {name}
        </h3>
        <h3 class="text-4xl text-blue-950">
            !
        </h3>
    </div>

    <h1 class="text-lg text-blue-950">
        Size nasıl yardımcı olabilirim?
    </h1>

</div>

<div class="flex flex-row justify-center">
    <div class="lg:w-1/2 flex flex-col px-8">
        <div class="bg-gradient-to-b from-blue-950 via-violet-950 to-purple-950 p-6 h-24">
            <h1 class="text-white text-lg text-center">
                ATF ya da irsaliye numaranızla hızlı sorgulama yapabilirsiniz
            </h1>
            </div>

            <div class="bg-white shadow-md p-4">
                <div class="flex flex-col">
                    <form>
                    <div class="flex flex-row py-2">
                        <label class="text-orange-500 text-sm py-2 w-1/3">
                            ATF NO
                        </label>
                        <input  id="atf" name="atf" class="p-2 block w-3/4 rounded-md shadow-sm focus:outline-orange-500">
                    </div>

                    <div class="flex flex-row py-2">
                        <label class="text-orange-500 text-sm py-2 w-1/3">
                            İrsaliye NO
                        </label>
                        <input id="irsaliye" name="irsaliye" class="p-2 block w-3/4 rounded-md shadow-sm focus:outline-orange-500">
                    </div>
                    </form>

                    <div class="py-4">
                        <div class="">
                            <label class="text-blue-950 text-sm py-2">
                                Teslimat Durumu:
                            </label>
                            <label class="text-orange-500 text-sm py-2 text-center">
                                Başlamak için ATF ya da irsaliye numarası giriniz
                            </label>
                        </div>
                        <img class="w-full h-full py-4" src="assets/husky-0.png"/>
                    </div>

                    <div class="py-2">
                    <label class="text-blue-950 text-sm">
                        Gönderen:
                    </label>
                    <label class="text-orange-500 text-sm py-2 text-center w-1/2">
                        Başlamak için ATF ya da irsaliye numarası giriniz
                    </label>
                    </div>

                    <div class="py-2">
                    <label class="text-blue-950 text-sm py-2">
                        Alıcı:
                    </label>
                    <label class="text-orange-500 text-sm py-2 text-center w-1/2">
                        Başlamak için ATF ya da irsaliye numarası giriniz
                    </label>
                    </div>

                    <div class="py-2">
                    <label class="text-blue-950 text-sm py-2">
                        Koli:
                    </label>
                     <label class="text-orange-500 text-sm py-2 text-center w-1/2">
                        Başlamak için ATF ya da irsaliye numarası giriniz
                    </label>
                    </div>

                    <div class="py-2">
                    <label class="text-blue-950 text-sm py-2">
                        KG - Desi:
                    </label>
                    <label class="text-orange-500 text-sm py-2 text-center w-1/2">
                        Başlamak için ATF ya da irsaliye numarası giriniz
                    </label>
                    </div>

                    <div class="py-2">
                    <label class="text-blue-950 text-sm py-2">
                        Ürün Grubu:
                    </label>
                    <label class="text-orange-500 text-sm py-2 text-center w-1/2">
                        Başlamak için ATF ya da irsaliye numarası giriniz
                    </label>
                    </div>
                </div>
            </div>
    </div>

    <div class="flex flex-col lg:w-4/6 px-8">
        <div class="bg-gradient-to-b from-blue-950 via-violet-950 to-purple-950 p-4 h-24">
            <h1 class="text-lg text-white p-4 text-center">
                Veya son teslimatlarınızı görüntüleyebilir, hızlıca istatistiklerinize göz arabilirsiniz
            </h1>
        </div>
        <div class="bg-white shadow-md">
            pattis
        </div>
    </div>
</div>