@page "/panel/teslimat"
@layout Components.Layout.MainLayout
@rendermode InteractiveServer
<PageTitle>OMNIA</PageTitle>

<h3 class="text-xl lg:text-4xl text-blue-950 font-bold text-center p-4">
    Teslimatlar
</h3>

<form @submit="SubmitForm">

    <div class="flex flex-row p-4">
        <div class="flex flex-col w-1/6">
            <label for="startDate">Başlangıç Tarihi</label>
            <InputDate @bind-Value="@startDate"></InputDate>
        </div>

        <div class="flex flex-col w-1/6 px-4">
            <label for="endDate">Bitiş Tarihi</label>
            <InputDate @bind-Value="endDate"></InputDate>
        </div>

        <div class="px-4">
            <label for="timeSpan">Zaman Aralığı</label>
            <div>
                <select id="timeSpan" @bind="selectedTimeSpan">
                    <option value="yesterday">Dün</option>
                    <option value="last3days">LSon 3 Gün</option>
                    <option value="lastweek">Geçen Hafta</option>
                    <option value="lastmonth">Bu Ay</option>
                </select>
            </div>
        </div>

    </div>
    <div class="flex flex-col px-4">
        <label for="textInput">Firma Adı</label>
        <div class="flex flex-row">
            <input class="w-1/3 mr-4" id="textInput" type="text" @bind-value="textInputValue"/>
            <button class="shadow-sm bg-gradient-to-b from-blue-950 via-violet-950 to-purple-950 text-white font-bold px-8 py-1 rounded-md" type="submit">Sorgula</button>
        </div>
    </div>
</form>

@code {
    private DateTime startDate;
    private DateTime endDate;
    private string textInputValue;
    private string selectedTimeSpan;

    protected override void OnInitialized()
    {
        // Set default dates to current day
        startDate = DateTime.Today;
        endDate = DateTime.Today;
    }

    private void SubmitForm()
    {
        Console.WriteLine($"Selected Time Span: {selectedTimeSpan}");
        Console.WriteLine($"Selected Dates: {startDate} - {endDate}");
        Console.WriteLine($"Text Input Value: {textInputValue}");
    }
}
