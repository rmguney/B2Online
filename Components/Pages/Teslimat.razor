@page "/panel/teslimat"
@layout Components.Layout.MainLayout
<PageTitle>OMNIA</PageTitle>

<h3 class="text-xl lg:text-4xl text-blue-950 font-bold text-center p-4">
    Teslimatlar
</h3>

<form @submit="SubmitForm">
    <div class="flex flex-col lg:flex-row px-4 lg:mb-2">
        <div class="flex flex-col w-full lg:w-1/6">
            <label class="text-blue-950 text-sm" for="startDate">Başlangıç Tarihi</label>
            <InputDate class="rounded-md shadow-md focus:outline-orange-500 p-1 text-blue-950 mb-2 lg:mb-0 text-sm" @bind-Value="@startDate"></InputDate>
        </div>

        <div class="flex flex-col w-full lg:w-1/6 lg:px-4">
            <label class="text-blue-950 text-sm" for="endDate">Bitiş Tarihi</label>
            <InputDate class="rounded-md shadow-md focus:outline-orange-500 p-1 text-blue-950 mb-2 lg:mb-0 text-sm" @bind-Value="endDate"></InputDate>
        </div>

        <div class="lg:px-4">
            <label class="text-blue-950 text-sm" for="timeSpan">Zaman Aralığı</label>
            <div>
                <select class="rounded-md shadow-md focus:outline-orange-500 p-1 py-1 text-blue-950 mb-2 lg:mb-0 w-full text-sm" id="timeSpan" @bind="selectedTimeSpan">
                    <option selected disabled></option>
                    <option>Dün</option>
                    <option>Son 3 Gün</option>
                    <option>Geçen Hafta</option>
                    <option>Bu Ay</option>
                </select>
            </div>
        </div>
    </div>

    <div class="flex flex-col px-4">
        <label class="text-blue-950 text-sm" for="company">Firma Adı</label>
        <div class="flex flex-col lg:flex-row lg:items-center">
            <select class="w-full lg:w-1/3 mr-4 rounded-md shadow-md focus:outline-orange-500 p-1 mb-4 lg:mb-0 text-blue-950 text-sm" id="company" @bind="selectedCompany">
                <option selected disabled></option>
                <option>B2 Cargo</option>
                <option>Omnia</option>
                <option>Navis</option>
            </select>
            <button class="shadow-md rounded-md bg-gradient-to-b from-blue-950 via-violet-950 to-purple-950 text-white font-bold lg:px-8 px-2 py-1 mb-4 lg:mb-0 text-sm" type="submit">Sorgula</button>
            <div class="flex flex-row items-center lg:ml-auto -mb-2 lg:mb-0">
                <div class="px-1">
                    <button class="shadow-md rounded-md bg-gradient-to-b from-blue-950 via-violet-950 to-purple-950 text-white font-bold text-sm lg:text-md lg:px-8 px-1 py-1">Excel</button>
                </div>

                <div class="px-1">
                    <button class="shadow-md rounded-md bg-gradient-to-b from-blue-950 via-violet-950 to-purple-950 text-white font-bold text-sm lg:text-md lg:px-8 px-1 py-1">PDF</button>
                </div>

                <div class="px-1">
                    <button class="shadow-md rounded-md bg-gradient-to-b from-blue-950 via-violet-950 to-purple-950 text-white font-bold text-sm lg:text-md lg:px-8 px-1 py-1">Yazdır</button>
                </div>

                <div class="px-1">
                    <button class="shadow-md rounded-md bg-gradient-to-b from-blue-950 via-violet-950 to-purple-950 text-white font-bold text-sm lg:text-md lg:px-8 px-1 py-1">Ekleri Gör</button>
                </div>
            </div>
        </div>
    </div>
</form>

<div class="flex flex-col p-4">
    <div class="bg-gradient-to-b from-blue-950 via-violet-950 to-purple-950 p-2 px-4 text-white font-bold">
        hhh
    </div>
    <div class="bg-white shadow-md p-4 text-sm">
        tablo
    </div>
</div>

@code {
    private DateTime startDate;
    private DateTime endDate;
    private string selectedCompany;
    private string selectedTimeSpan;

    protected override void OnInitialized()
    {
        startDate = DateTime.Today;
        endDate = DateTime.Today;
    }

    private void SubmitForm()
    {
        Console.WriteLine($"Selected Time Span: {selectedTimeSpan}");
        Console.WriteLine($"Selected Dates: {startDate} - {endDate}");
        Console.WriteLine($"Text Input Value: {selectedCompany}");
    }
}
