@page "/panel/durum"
@layout Components.Layout.MainLayout
<PageTitle>OMNIA</PageTitle>

<h3 class="text-xl lg:text-4xl text-blue-950 font-bold text-center p-4">
    Teslimat Durumu ve Detayları
</h3>

<div class="flex lg:flex-row flex-col justify-center">
    <div class="flex flex-col px-4 w-full lg:w-1/3 mb-4 lg:mb-0">
        <div class="bg-gradient-to-b from-blue-950 via-violet-950 to-purple-950">
            <h1 class="text-white text-lg text-center py-4 px-2">
                ATF ya da irsaliye numaranızı giriniz
            </h1>
        </div>

        <AtfTarayici ATFLabel="ATF No"
                     IrsaliyeLabel="İrsaliye No"
                     TeslimatDurumu="ATF ya da irsaliye numaranızı giriniz"
                     Gonderen=""
                     Alici=""
                     Koli=""
                     KGDesi=""
                     UrunGrubu="" />
    </div>
    <div class="flex flex-col px-4 mb-4 lg:mb-0 lg:-ml-4 w-full lg:w-1/3">
        <div class="bg-gradient-to-b from-blue-950 via-violet-950 to-purple-950">
            <h1 class="text-white text-lg text-center py-4 px-2 h-auto">
                Dosya Ekleri
            </h1>
        </div>
        <div class="bg-white shadow-md p-4">
            <div class="flex flex-row mb-4">
                <div class="px-1">
                    <button class="shadow-md rounded-md bg-gradient-to-b from-blue-950 via-violet-950 to-purple-950 text-white font-bold px-8 py-1" type="">İndir</button>
                </div>

                <div class="px-1">
                    <button class="shadow-md rounded-md bg-gradient-to-b from-blue-950 via-violet-950 to-purple-950 text-white font-bold px-8 py-1" type="">Yazdır</button>
                </div>
            </div>
            <div>
                <label id="dosya-ekleri" class="text-orange-500 text-sm">
                    Dosya eklerini görüntülemek için ATF ya da irsaliye no giriniz.
                </label>
            </div>
        </div>
    </div>
</div>