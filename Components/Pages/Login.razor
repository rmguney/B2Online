@page "/"
@layout Components.Layout.LoginLayout
@rendermode InteractiveServer
<PageTitle>OMNIA</PageTitle>
<div>
<div class="flex justify-center items-center flex-col lg:flex-row">
     <div class="lg:w-1/3 scale-75 translate-x-4">
          <img src="assets/omnia-login.png"
               class=""
               alt="OMNIA"/>
     </div>

     <div class="flex-col flex flex-wrap items-center justify-center -translate-y-10">
        <img src="assets/husky-login.png"
             class="w-1/2 translate-y-12 sm-hidden"
             alt="OMNIA"/>
        <div class="bg-white p-8 py-2 shadow-md w-80">
            <a class="p-10"></a>
            <form>
                <div class="py-8">
                    <label for="username" class="block text-blue-950 text-md mb-1">Kullanıcı Adı</label>
                    <input type="text" id="username" name="username" class="p-2 block w-full rounded-md shadow-sm focus:outline-orange-500">
                </div>

                <div class="mb-4">
                    <label for="password" class="block text-blue-950 text-md mb-1">Şifre</label>
                    <input type="password" id="password" name="password" class="p-2 block w-full rounded-md shadow-sm focus:outline-orange-500">
                </div>
                
                <div class="mb-2 flex items-center">
                    <input type="checkbox" id="remember_me" name="remember_me" class="mr-2">
                    <label for="remember_me" class="text-blue-950 text-sm">Beni Hatırla</label>
                </div>

                <div class="mb-4 flex items-center">
                    <input type="checkbox" id="not_a_robot" name="not_a_robot" class="mr-2">
                    <label for="not_a_robot" class="text-blue-950 text-sm">Robot Değilim</label>
                </div>

                <div class="text-center">
                     <a href="/panel/home" type="submit" class="w-3/4 text-white text-lg text-bold font-bold p-1 rounded-md shadow-sm bg-gradient-to-b from-orange-400 to-red-600 hover:from-orange-500 hover:to-red-600">Giriş</a>
                </div>

                <div class="text-center">
                    <div class="p-2">
                        <a href="#" class="text-blue-950 text-sm hover:text-orange-500">Şifremi Unuttum</a>
                    </div>
                </div>
            </form>
        </div>
     </div>
</div>

    <div class="text-orange-500 text-xs text-center lg:translate-y-20">
        Powered by Navis Kurumsal, brand of B2Group
    </div>
</div>

