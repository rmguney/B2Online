@page "/"
@layout Components.Layout.LoginLayout

<PageTitle>OMNIA</PageTitle>

<div class="flex justify-center items-center flex-col lg:flex-row">
    <div class="lg:w-1/3 scale-75 translate-x-4">
          <img src="assets/omnia-login.png"
               class=""
               alt="OMNIA"/>
     </div>

     <div class="flex-col flex flex-wrap items-center justify-center -translate-y-10">
        <img src="assets/husky-login.png"
             class="w-1/2 translate-y-12 sm-hidden"
             alt="OMNIA"/>
        <div class="bg-white p-8 py-2 shadow-md w-80">
            <a class="p-10"></a>
            <form>
                <div class="py-8">
                    <label for="username" class="block text-gray-700 text-sm mb-2">Kullanıcı Adı</label>
                    <input type="text" id="username" name="username" class="p-2 block w-full rounded-md shadow-sm">
                </div>

                <div class="mb-4">
                    <label for="password" class="block text-gray-700 text-sm mb-2">Şifre</label>
                    <input type="password" id="password" name="password" class="p-2 block w-full rounded-md shadow-sm">
                </div>
                
                <div class="mb-2 flex items-center">
                    <input type="checkbox" id="remember_me" name="remember_me" class="mr-2">
                    <label for="remember_me" class="text-gray-700 text-sm">Beni Hatırla</label>
                </div>

                <div class="mb-4 flex items-center">
                    <input type="checkbox" id="not_a_robot" name="not_a_robot" class="mr-2">
                    <label for="not_a_robot" class="text-gray-700 text-sm ">Robot Değilim</label>
                </div>

                <a href="/panel/home" type="submit" class="w-full text-white font-bold p-2 rounded-md bg-orange-500 text-center">Giriş Yap</a>

                <div class="text-center">
                    <div class="p-1">
                        <a href="#" class="text-xs">Şifremi Unuttum</a>
                    </div>
                </div>

            </form>
        </div>

     </div>
</div>

@code{}